    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdComentario)
        </dt>

        <dd>
            @Html.EditorFor(model => model.IdComentario, new { htmlAttributes = new { disabled = "disable" } })
